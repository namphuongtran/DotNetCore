@model DotNetCore.Models.CityInfo
@{
    ViewData["Title"] = "Edit";
}
<h2 class="text-center">Edit City Info</h2>
<form class="city-form">
    @*@Html.AntiForgeryToken()*@
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger message"></div>
        <input asp-for="ID" class="form-control city-id" type="hidden"/>
        <div class="form-group">
            <label asp-for="City" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="City" class="form-control city-name" />
                <span asp-validation-for="City" class="text-danger validation-city"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Lat" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Lat" class="form-control lat-val" />
                <span asp-validation-for="Lat" class="text-danger validation-lat"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Lon" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Lon" class="form-control lon-val" />
                <span asp-validation-for="Lon" class="text-danger validation-lon"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Save" class="btn btn-default btn-save" />
            </div>
        </div>
    </div>
</form>
<div>
    @Html.ActionLink("Back to list", "Index")
</div>
